<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".ResultActivity">

    <TextView
        android:textColor="@color/purple_700"
        android:layout_marginTop="16dp"
        android:text="Seu IMC é:"
        android:textAlignment="center"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="match_parent"
        android:textAlignment="center"
        android:padding="16dp"
        android:layout_height="wrap_content"
        tools:text="Olá, "
        android:textSize="38sp"
        android:id="@+id/textview_result"/>

    <TextView
        android:id="@+id/textview_classificacao"
        android:layout_margin="8dp"
        tools:text="Classificação: Normal"
        android:textSize="18sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Veja abaixo a tabela: "
        android:textSize="20sp"
        android:layout_marginHorizontal="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:text="MENOR QUE 18,5 ABAIXO DO PESO"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ENTRE 18,5 E 24,9 NORMAL"
        android:layout_marginHorizontal="10dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ENTRE 25,0 E 29,9 SOBREPESO I"
        android:layout_marginHorizontal="10dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ENTRE 30,0 E 39,9 SOBREPESO II"
        android:layout_marginHorizontal="10dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MAIOR QUE 40 OBESIDADE GRAVE III"
        android:layout_marginHorizontal="10dp"/>

</LinearLayout>